<%
getBackgroundRepeat = function() {
    return media.setting?.generalBackgroundSetting?.layoutSettingBackgroundImageForm.repeat=== true ? 'background-repeat:repeat;' :'background-repeat:no-repeat;'
}
getWidth = function() {
    return media.setting?.generalBackgroundSetting?.layoutSettingBackgroundImageForm.width === null ? 'width:100%;' :'width:'+media.setting.generalBackgroundSetting.layoutSettingBackgroundImageForm.width + ';'
}
getHeight = function() {
    return media.setting?.generalBackgroundSetting?.layoutSettingBackgroundImageForm.height === null ? 'height:100%;' :'height:'+media.setting.generalBackgroundSetting.layoutSettingBackgroundImageForm.height +';'
}
getOpacity = function() {
    return media.setting?.generalBackgroundSetting?.layoutSettingBackgroundImageForm?.opacity === null ? 'opacity:1;' :'opacity:'+media.setting?.generalBackgroundSetting?.layoutSettingBackgroundImageForm?.opacity +';'
}
getBackgroundPosition = function() {
    return `object-position:${media.setting?.generalBackgroundSetting?.layoutSettingBackgroundImageForm.position.split(' ')[0]}\ ${media.setting.generalBackgroundSetting.layoutSettingBackgroundImageForm.position.split(' ')[1]}` 
}
%>

<div
  style="
    tab-size: 4;
    -webkit-text-size-adjust: 100%;
    line-height: inherit;
    font-family: 'Prompt-Light', 'Prompt Light', 'Prompt', sans-serif;
    --tw-text-opacity: 1;
    color: rgba(55, 65, 81, var(--tw-text-opacity));
    --tw-bg-opacity: 1;
    font-size: 16px;
    box-sizing: border-box;
    border-width: 0;
    border-style: solid;
    display: block;
    width: 100%;
    transition: transform 250ms cubic-bezier(0, 0, 0.2, 1) !important;
    position: relative;
    z-index: 0;
  "
>   
    <%- htmlText %>
    <picture> 
        <%- imageSource -%>
        <img src=<%- media.url %> style="<%=
        getBackgroundRepeat() + getWidth() + getHeight() + getOpacity() +
        'object-fit:' + media.setting?.generalBackgroundSetting?.layoutSettingBackgroundImageForm?.imageScale  + ';' +
        'position:absolute;z-index:-2;top:0px;left:0px;' +
        getBackgroundPosition() 
        %>"  />
    </picture>
</div>