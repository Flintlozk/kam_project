<!DOCTYPE html>
<html lang="en">
<head>
    <title>Selecting Order</title>
    <script defer type="text/javascript" src="javascript/javascript.js"></script>
    <script defer type="text/javascript" src="javascript/selectproduct.js"></script>
    <%- include ("../../partials/head") %>
    <script>
        <%if (payload) { %>
            var payloadData = <%- JSON.stringify(payload); %>
        <% } %>
       
    </script>
</head>

<body>
    <style>
        * {
            box-sizing: border-box;
            font-family: 'Prompt', 'Prompt-Medium', sans-serif;
        }

        body {
            max-width: 590px;
            margin: 15px auto;
            background:#FFF;
        }

        @import url('https://fonts.googleapis.com/css2?family=Prompt:wght@400;500&display=swap');

        form {
            display: flex;
            flex-direction: column;
            width: 100%;
        }


        .product-variant-grid{
            display:grid;
            grid-gap:10px;
        }


        .variant-card{
            background-color: #f6f6f6;
            border-radius:8px;
            padding:10px;
            box-shadow: 0 0px 0px 1 rgba(0,0,0,0.2);
            transition: 0.3s;
        }

        .variant-card:hover {
            box-shadow: 0 0px 0px 1px #54b1ff;
        }

        .variant-item{
            display:grid;
            grid-template-columns:120px auto;
        }

        .variant-item img{
            width: 100px;
            height: 100px;
            border-radius:100%;
            background:white
        }

        .variant-detail{
            display: grid;
            grid-gap: 5px;

        }
        .variant-detail span{
            font-weight: 550;
        }
        .btn-add-to-card{
            width:200px;
            cursor:pointer;
        }


        button,
        select {
            border-radius: 4px;

        }

        button {
            height: 40px;
            border: none;
            background-color: #53b1ff ;
            color: white;
        }

        button span {
            font-size: 15px;
            font-weight: 500;
        }

        .wrapper,
        form {
            display: flex;
            flex-direction: column;
        }

        .input-group,
        button {
            width: 100%;
            display: flex;
        }

        button {
            font-size: 15px;
            justify-content: space-between;
            align-items: center;
            justify-content: center;
            border: none;
            margin-bottom: 10px;
            height: 40px;
            font-weight: bold;
        }

        .add-to-cart {
            background-color: #53b1ff;
            color: #FFF;
            cursor:pointer;
        }

        button .payment {
            color: #363951;
            font-weight: 200;
            font-size: 14px;
        }
    </style>


    <% var productVariant = payload.product %>
        <input type="hidden" name="psid" id="psid">
        <section class="product-variant-grid">
            <% for(var i=0; i < productVariant.length; i++) { %>
            <div class="variant-card">
                <div class="variant-item">
                <img class="variant-image" src = <%=productVariant[i].variantImages  %> />
                <div class="variant-detail">
                    <div class="variant-name">Title : <span><%= productVariant[i].variantAttributes %></span></div>
                    <div>Unit Price : <span>à¸¿ <%= productVariant[i].variantUnitPrice %></span></div>
                    <button class="btn-add-to-card" onClick="addItemToCart(<%=productVariant[i].variantID%>)">
                        Add to cart
                    </button>
                </div>
                </div>   
            </div>
            <% } %>
        </section>
    <input type="hidden" id="viewtype" name="viewtype" value="<%=payload.view%>">
    <%if (payload.view === 'FACEBOOK_WEBVIEW') { %>
        <%- include ("../../partials/footer" ,{valuepsid:payload.psid}) %>
    <%}%>
</body>
</html>